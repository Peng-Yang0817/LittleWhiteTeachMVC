<script>
    $(() => {
        $.ajax({
            async: false,
            url: 'https://localhost:44352/First/GetUserData',// url位置
            type: 'get',// post/get
            dataType: 'json',
            data: {},// 輸入的資料
            error: function (xhr) {
                console.log('沒抓到資料耶')
            },// 錯誤後執行的函數
            success: function (response) {
                console.log(response);
                for (let i = 0; i < response.length; i++) {
                    const element = response[i];
                    $(`<li style="cursor:pointer;padding:3px;width:250px">
                            使用者名稱=${element.UserName}<br>
                            使用者權限=${element.RoleId}
                            </li><p></p>`)
                        .appendTo('#info');
                }
            }// 成功後要執行的函數 style="cursor:pointer"
        });
        $('li').click((e) => {
            var itself = $(e.currentTarget);
            itself.css({ "color": "#808281", "border": "1px solid #808281", "border-radius": "5px" })
                .siblings().css({ "color": "black", "border": "0" })
        });
    })

</script>
